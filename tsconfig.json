{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
